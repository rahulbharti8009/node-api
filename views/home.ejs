<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Home Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 2rem;
      /* text-align: center; */
    }
  </style>
</head>
<body>

       <h1>ðŸ”— Generated shorted</h1>
     <% if(locals.id) { %>
        <li> <%= id %></li> <% } %>

<div>
    <form method = "POST" action="/api">
    <label>Enter your origin URL</label>
    <input type="text" name="url" placeholder="http://example.com" />
    <button type="submit">Generate</button>
</form>

<% if (locals.urls) { %>
    <table>
        <thead>
          <th>S.no</th>
          <th>Short ID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => { %>
                <tr>
             <td><%= index + 1 %></td>
             <td><%= url.shortId %></td>
             <td><%= url.redirectURL %></td>
             <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>
</div>

</body>
</html>
